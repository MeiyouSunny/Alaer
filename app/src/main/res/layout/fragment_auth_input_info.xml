<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="handler"
            type="llc.metaversenetwork.app.base.BindClickListener" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        tools:background="@drawable/bg_auth"
        tools:context=".ui.user.LoginFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="31dp"
                    android:layout_marginLeft="39dp"
                    android:layout_marginTop="34dp"
                    android:background="@drawable/ic_auth_input_info" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="87dp"
                    android:layout_marginTop="28dp"
                    android:text="@string/name_and_id"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_17" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="87dp"
                    android:layout_marginTop="54dp"
                    android:text="@string/input_follow_infos_to_verify"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_12" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="22dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="72dp"
                    android:layout_height="wrap_content"
                    android:text="@string/card_type"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_16" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="42dp"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:background="@color/card_bg_trans"
                    android:paddingLeft="12dp">

                    <Spinner
                        android:id="@+id/cardTypeSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/white"
                        android:entries="@array/card_types"
                        android:popupBackground="#CC000000"
                        android:spinnerMode="dropdown"
                        android:textSize="@dimen/font_16"
                        android:theme="@style/Spinner" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="72dp"
                    android:layout_height="wrap_content"
                    android:text="@string/card_name"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_16" />

                <EditText
                    android:id="@+id/etName"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginLeft="8dp"
                    android:background="@color/card_bg_trans"
                    android:hint="@string/input_name"
                    android:paddingLeft="18dp"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="@dimen/font_14" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="72dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="@string/card_id"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_16" />

                <EditText
                    android:id="@+id/etCard"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginLeft="8dp"
                    android:background="@color/card_bg_trans"
                    android:hint="@string/input_license"
                    android:paddingLeft="18dp"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="@dimen/font_14" />

            </LinearLayout>

            <TextView
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="40dp"
                android:text="@string/card_photo"
                android:textColor="@color/white"
                android:textSize="@dimen/font_16" />

            <RelativeLayout
                android:id="@+id/selectPhoto"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="18dp"
                android:layout_marginRight="36dp"
                android:background="@color/card_bg_trans"
                android:clickable="true"
                android:onClick="@{handler.click}">

                <ImageView
                    android:id="@+id/photo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_card_photo" />

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/next"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="45dp"
                android:gravity="center"
                android:text="@string/card_photo_desc"
                android:textColor="@color/font_red"
                android:textSize="@dimen/font_13" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="28dp"
                android:layout_marginRight="18dp"
                android:layout_marginBottom="32dp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/cancel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_weight="1"
                    android:background="@drawable/btn_gray"
                    android:onClick="@{handler.click}"
                    android:text="@string/cancel"
                    android:textColor="@color/white" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/next"
                    android:layout_width="0dp"
                    android:enabled="false"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="18dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_green"
                    android:onClick="@{handler.click}"
                    android:text="@string/confirm"
                    android:textColor="@color/white" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </LinearLayout>


    </ScrollView>

</layout>