<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="llc.metaversenetwork.app.R" />

        <variable
            name="handler"
            type="llc.metaversenetwork.app.base.BindClickListener" />

        <variable
            name="step"
            type="int" />

        <variable
            name="bgBigPics"
            type="int[]" />

        <variable
            name="bgPics"
            type="int[]" />

        <variable
            name="imgGetMinter"
            type="int" />

        <variable
            name="progressComplete"
            type="boolean" />

        <variable
            name="stepHandler"
            type="llc.metaversenetwork.app.ui.produce.ProductionHallActivity.ProduceStep" />

    </data>

    <FrameLayout
        android:id="@+id/rootLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="true"
        android:fitsSystemWindows="true"
        app:drawableRes="@{step == -1 ? R.drawable.bg_produce_1 : bgBigPics[step]}"
        tools:context=".ui.produce.ProductionHallActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/stepBg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="@{step==-1? true: false}"
                android:onClick="@{() -> stepHandler.onStep(-1)}"
                app:drawableRes="@{step == -1 ? imgGetMinter : bgPics[step]}" />

            <LinearLayout
                android:id="@+id/layoutProgress"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:layout_above="@+id/layoutStep"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="26dp"
                android:paddingRight="26dp"
                android:visibility="@{step>=0 ? View.VISIBLE : View.INVISIBLE}">

                <llc.metaversenetwork.app.view.TextProgressBar
                    android:id="@+id/progress"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="0dp"
                    android:layout_height="16dp"
                    android:layout_weight="1"
                    android:max="100"
                    android:progress="0"
                    android:progressDrawable="@drawable/bg_progress"
                    app:textColor="@color/white"
                    app:textSize="11sp" />

                <androidx.appcompat.widget.AppCompatButton
                android:textAllCaps="false"
                    android:id="@+id/speedUp"
                    android:layout_width="72dp"
                    android:layout_height="26dp"
                    android:layout_marginLeft="14dp"
                    android:background="@drawable/bg_red_round_corner"
                    android:clickable="true"
                    android:gravity="center"
                    android:onClick="@{handler.click}"
                    android:text="@string/speed_up"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_10"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutStep"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="22dp"
                android:orientation="horizontal"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:visibility="@{step>=0 ? View.VISIBLE : View.INVISIBLE}">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="@{step==0 ? true : false}"
                    android:onClick="@{() -> stepHandler.onStep(1)}"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/icStepFertilize"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:alpha="@{step==0 ? 1F : 0.5F}"
                        android:background="@drawable/ic_produce_fertilize" />

                    <TextView
                        android:layout_width="54dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:text="@string/fertilize"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_10"
                        android:textStyle="bold"
                        app:drawableRes="@{step==0 ? R.drawable.bg_orange_round_corner : R.drawable.bg_gray_round_corner_produce_step}" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="@{step==1 ? true : false}"
                    android:onClick="@{() -> stepHandler.onStep(2)}"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/icStepWater"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:alpha="@{step==1 ? 1F : 0.5F}"
                        android:background="@drawable/ic_produce_water" />

                    <TextView
                        android:layout_width="54dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:text="@string/water"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_10"
                        android:textStyle="bold"
                        app:drawableRes="@{step==1 ? R.drawable.bg_orange_round_corner : R.drawable.bg_gray_round_corner_produce_step}" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="@{step==2 ? true : false}"
                    android:onClick="@{() -> stepHandler.onStep(3)}"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/icStepDisinsection"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:alpha="@{step==2 ? 1F : 0.5F}"
                        android:background="@drawable/ic_produce_disinsection" />

                    <TextView
                        android:layout_width="54dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:text="@string/disinsection"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_10"
                        android:textStyle="bold"
                        app:drawableRes="@{step==2 ? R.drawable.bg_orange_round_corner : R.drawable.bg_gray_round_corner_produce_step}" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="@{step == 3 ? true : false}"
                    android:onClick="@{() -> stepHandler.onStep(4)}"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/icStepReap"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:alpha="@{step == 3 ? 1F : 0.5F}"
                        android:background="@drawable/ic_produce_reap" />

                    <TextView
                        android:layout_width="54dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:text="@string/reap"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_10"
                        android:textStyle="bold"
                        app:drawableRes="@{step==3 ? R.drawable.bg_orange_round_corner : R.drawable.bg_gray_round_corner_produce_step}" />

                </LinearLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/toBase"
                android:layout_width="140dp"
                android:layout_height="32dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="48dp"
                android:background="@drawable/bg_to_produce_base"
                android:clickable="true"
                android:gravity="center_vertical|right"
                android:onClick="@{handler.click}"
                android:paddingLeft="16dp"
                android:paddingRight="14dp"
                android:text="@string/seed_store"
                android:textColor="#621B16"
                android:textSize="@dimen/font_12"
                android:textStyle="bold" />

            <include layout="@layout/layout_title_bar" />

        </RelativeLayout>


    </FrameLayout>

</layout>