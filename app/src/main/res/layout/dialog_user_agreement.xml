<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="handler"
            type="llc.metaversenetwork.app.base.BindClickListener" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_margin="40dp"
        android:background="@drawable/bg_white_round_corner">

        <ImageView
            android:id="@+id/imgTop"
            android:layout_width="match_parent"
            android:layout_height="91dp"
            android:background="@drawable/bg_dialog_top" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:text="@string/user_agreement"
            android:textColor="@color/white"
            android:textSize="@dimen/font_20" />

        <WebView
            android:id="@+id/webView"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_below="@+id/imgTop"
            android:paddingLeft="16dp"
            android:paddingTop="16dp"
            android:paddingRight="16dp"
            android:scrollbars="none">

        </WebView>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@+id/layoutBottom"
            android:background="#E1E1E1" />

        <LinearLayout
            android:id="@+id/layoutBottom"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_dialog_bottom_left_button"
                android:onClick="@{handler.click}"
                android:text="@string/not_agreement"
                android:textColor="@color/font_41"
                android:textSize="@dimen/font_18" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#E1E1E1" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/confirm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_dialog_bottom_right_button"
                android:clickable="true"
                android:onClick="@{handler.click}"
                android:text="@string/agree_and_continur"
                android:textColor="@color/white"
                android:textSize="@dimen/font_18" />

        </LinearLayout>

    </RelativeLayout>

</layout>