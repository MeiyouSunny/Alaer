<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="statistic"
            type="com.alaer.lib.api.bean.CityStatistic" />

        <variable
            name="handler"
            type="llc.metaversenetwork.app.base.BindClickListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_city_note"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        tools:context=".ui.user.UserInfoActivity">

        <include layout="@layout/layout_title_bar_white" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="19dp">

                    <TextView
                        android:id="@+id/peopleNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="278.3"
                        android:text="@{String.valueOf(statistic.number)}"
                        android:textColor="@color/white"
                        android:textSize="34sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/peopleNum"
                        android:layout_marginLeft="6dp"
                        android:layout_toRightOf="@+id/peopleNum"
                        android:text="@string/ten_thousand_people"
                        android:textColor="@color/white"
                        android:textSize="14sp" />


                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/peopleNum"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="14dp"
                    android:layout_toRightOf="@+id/peopleNum"
                    android:text="@string/city_total_people_verifed"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="18dp"
                    app:cardBackgroundColor="@color/card_bg_trans"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:drawableLeft="@drawable/ic_green_refresh"
                        android:drawablePadding="4dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="30dp"
                        android:paddingRight="30dp"
                        android:text="@{@string/update_date_is(String.valueOf(statistic.countDate))}"
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        tools:text="更新时间：2021-01-03 21:30:09" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="86dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="22dp"
                    android:layout_marginRight="24dp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/card_bg_trans"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="0dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingTop="14dp"
                            android:paddingBottom="14dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:text="@string/added_today"
                                android:textColor="@color/white"
                                android:textSize="@dimen/font_14" />

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true">

                                <TextView
                                    android:id="@+id/numAddToday"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    tools:text="36"
                                    android:text="@{String.valueOf(statistic.increaseToday)}"
                                    android:textColor="@color/white"
                                    android:textSize="21sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignBaseline="@+id/numAddToday"
                                    android:layout_marginLeft="6dp"
                                    android:layout_toRightOf="@+id/numAddToday"
                                    android:text="@string/person"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/font_12" />

                            </RelativeLayout>

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="12dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/card_bg_trans"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="0dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingTop="14dp"
                            android:paddingBottom="14dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:text="@string/added_yesterday"
                                android:textColor="@color/white"
                                android:textSize="@dimen/font_14" />

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true">

                                <TextView
                                    android:id="@+id/numAddYesterday"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    tools:text="28"
                                    android:text="@{String.valueOf(statistic.increase)}"
                                    android:textColor="@color/white"
                                    android:textSize="21sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignBaseline="@+id/numAddYesterday"
                                    android:layout_marginLeft="6dp"
                                    android:layout_toRightOf="@+id/numAddYesterday"
                                    android:text="人"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/font_12" />

                            </RelativeLayout>

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_marginTop="30dp"
                    android:background="#E9E5E5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="28dp"
                    android:layout_marginRight="18dp"
                    android:text="@string/added_7days"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/barChart"
                    android:layout_width="match_parent"
                    android:layout_height="174dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="24dp" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</layout>