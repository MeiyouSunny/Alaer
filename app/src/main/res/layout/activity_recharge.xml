<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="data"
            type="com.alaer.lib.api.bean.AssetsTotalInfo.Assets" />

        <variable
            name="currencyId"
            type="int" />

        <variable
            name="handler"
            type="llc.metaversenetwork.app.base.BindClickListener" />
    </data>

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_wallet"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        tools:context=".ui.user.UserInfoActivity">

        <include layout="@layout/layout_title_bar_white" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="24dp"
                android:paddingTop="20dp"
                android:paddingRight="24dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/amoutAvalible"
                        android:layout_width="62dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="資產選擇"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_15" />

                    <TextView
                        android:id="@+id/typeUSDT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:background="@drawable/btn_blue"
                        android:clickable="true"
                        android:onClick="@{handler.click}"
                        android:paddingLeft="8dp"
                        android:paddingTop="4dp"
                        android:paddingRight="8dp"
                        android:paddingBottom="4dp"
                        android:text="USDT"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_14" />

                    <TextView
                        android:id="@+id/typeMNC"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/btn_gray_trans"
                        android:clickable="true"
                        android:onClick="@{handler.click}"
                        android:paddingLeft="8dp"
                        android:paddingTop="4dp"
                        android:paddingRight="8dp"
                        android:paddingBottom="4dp"
                        android:text="MNC"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_14" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="26dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="62dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="鏈類型"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_15" />


                    <LinearLayout
                        android:id="@+id/layoutContract"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" />

                    <!--                    <TextView-->
                    <!--                        android:layout_width="wrap_content"-->
                    <!--                        android:layout_height="wrap_content"-->
                    <!--                        android:layout_marginLeft="12dp"-->
                    <!--                        android:background="@drawable/btn_blue"-->
                    <!--                        android:clickable="true"-->
                    <!--                        android:onClick="@{handler.click}"-->
                    <!--                        android:paddingLeft="8dp"-->
                    <!--                        android:paddingTop="4dp"-->
                    <!--                        android:paddingRight="8dp"-->
                    <!--                        android:paddingBottom="4dp"-->
                    <!--                        android:text="BSC"-->
                    <!--                        android:textColor="@color/white"-->
                    <!--                        android:textSize="@dimen/font_14" />-->

                    <!--                    <TextView-->
                    <!--                        android:layout_width="wrap_content"-->
                    <!--                        android:layout_height="wrap_content"-->
                    <!--                        android:layout_marginLeft="10dp"-->
                    <!--                        android:background="@drawable/btn_gray_trans"-->
                    <!--                        android:clickable="true"-->
                    <!--                        android:onClick="@{handler.click}"-->
                    <!--                        android:paddingLeft="8dp"-->
                    <!--                        android:paddingTop="4dp"-->
                    <!--                        android:paddingRight="8dp"-->
                    <!--                        android:paddingBottom="4dp"-->
                    <!--                        android:text="HEOC"-->
                    <!--                        android:textColor="@color/white"-->
                    <!--                        android:textSize="@dimen/font_14" />-->


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <View
                        android:id="@+id/line"
                        android:layout_width="4dp"
                        android:layout_height="14dp"
                        android:background="@color/blue" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_toRightOf="@+id/line"
                        android:text="充值地址"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_15" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/qrAddress"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:id="@+id/coinAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_12"
                    tools:text="1KLIjl84IP8lkdsall09" />


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/copyAddress"
                    style="@style/BtnGreen"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="22dp"
                    android:layout_marginRight="0dp"
                    android:onClick="@{handler.click}"
                    android:text="複製地址" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="4dp"
                        android:layout_height="14dp"
                        android:background="@color/blue" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_toRightOf="@+id/line"
                        android:text="充幣提醒"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_15" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="32dp"
                    android:layout_toRightOf="@+id/line"
                    android:text="1.請勿向上述地址充值任何非USDT（BSC)資產，否則資產將不可找回。 \n
2.您充值至上述地址後，需要整個網絡節點的確認，10次網絡確認後到賬，20次網絡確認後可提幣。 \n
3.最好充值金額：1USDT（BSC），小於最小金額的充值將不會上漲且無法退回。 \n
4.您的充值地址不會經常改變，可以重複充值；如有更改，我們會通過網站公告或短信通知您。 \n
*您在充值前務必確認地址，充值地址錯誤或未按上述要求操作，最後用戶自行承擔。"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_13" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</layout>