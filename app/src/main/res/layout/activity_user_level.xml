<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="handler"
            type="llc.metaversenetwork.app.base.BindClickListener" />
    </data>

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_discover"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <include layout="@layout/layout_title_bar_white" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="106dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="22dp"
            app:cardBackgroundColor="@color/card_bg_trans"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="27dp"
                android:paddingRight="30dp">

                <ImageView
                    android:id="@+id/levelImg"
                    android:layout_width="76dp"
                    android:layout_height="76dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_user_level0" />

                <TextView
                    android:id="@+id/levelValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/levelInfo"
                    android:layout_marginBottom="10dp"
                    android:gravity="bottom"
                    tools:text="LV3"
                    android:textColor="@color/font_orange"
                    android:textSize="@dimen/font_30" />

                <TextView
                    android:id="@+id/levelLine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/levelInfo"
                    android:layout_marginBottom="14dp"
                    android:layout_toRightOf="@+id/levelValue"
                    android:text=" / "
                    android:textColor="@color/font_orange"
                    android:textSize="@dimen/font_18" />

                <TextView
                    android:id="@+id/levelLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/levelInfo"
                    android:layout_marginBottom="14dp"
                    android:layout_toRightOf="@+id/levelLine"
                    android:text="高級會員"
                    android:textColor="@color/font_orange"
                    android:textSize="@dimen/font_18" />

                <TextView
                    android:id="@+id/levelInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="24dp"
                    android:text="当前贡献值"
                    android:textColor="@color/font_orange"
                    android:textSize="@dimen/font_14" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>


        <likly.view.repeat.RepeatView
            android:id="@+id/repeatView"
            style="@style/RepeatView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:emptyView="@layout/layout_no_data"
            app:viewHolderClass="llc.metaversenetwork.app.ui.user.UserLevelAdapter"
            app:viewHolderLayout="@layout/item_user_level" />

    </LinearLayout>

</layout>