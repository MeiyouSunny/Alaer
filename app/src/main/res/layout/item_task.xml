<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="llc.metaversenetwork.app.R" />

        <variable
            name="isDefaultLanguage"
            type="boolean" />

        <variable
            name="data"
            type="com.alaer.lib.api.bean.AdTask" />

        <variable
            name="handler"
            type="llc.metaversenetwork.app.ui.task.TaskAdapter.OnTaskClickHandler" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginBottom="10dp"
        android:clickable="false"
        app:cardBackgroundColor="@color/card_bg_trans"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="6dp"
                android:layout_toLeftOf="@+id/action"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@{isDefaultLanguage ? data.name : data.nameEn}"
                android:textColor="@color/white"
                android:textSize="@dimen/font_16"
                tools:text="看广告，赠贡献值" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:layout_marginTop="38dp"
                android:layout_marginRight="6dp"
                android:layout_toLeftOf="@+id/action"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@{@string/task_done_info(data.times, data.times-data.remain, data.times)}"
                android:textColor="@color/white"
                android:textSize="@dimen/font_12"
                tools:text="每日奖励上限10次，已完成1/10" />

            <androidx.appcompat.widget.AppCompatButton
                android:textAllCaps="false"
                android:id="@+id/action"
                android:layout_width="74dp"
                android:layout_height="27dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/btn_green"
                android:enabled="@{data.remain==0 ? false : true}"
                android:gravity="center"
                android:onClick="@{(View)->handler.onTaskClick(data)}"
                android:text="@{data.remain==0 ? @string/task_done : @string/do_task}"
                android:textColor="@color/white"
                android:textSize="@dimen/font_14" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</layout>
