<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="llc.metaversenetwork.app.R" />

        <variable
            name="hasLogin"
            type="boolean" />

        <variable
            name="defaultLanguage"
            type="boolean" />

        <variable
            name="showLanguage"
            type="boolean" />

        <variable
            name="handler"
            type="llc.metaversenetwork.app.base.BindClickListener" />

        <variable
            name="user"
            type="com.alaer.lib.api.bean.TeamDetail" />

    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <FrameLayout
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <llc.metaversenetwork.app.view.mapview.MapContainer
                    android:id="@+id/map"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/layoutUser"
                        style="@style/ClickableStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="52dp"
                        android:layout_below="@+id/notice"
                        android:layout_marginTop="18dp"
                        android:background="@drawable/bg_gray_round_corner2"
                        android:onClick="@{handler.click}"
                        android:paddingLeft="8dp"
                        android:paddingRight="14dp"
                        android:visibility="@{hasLogin?View.VISIBLE:View.GONE}">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/icHead"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_head_default_boy" />

                        <TextView
                            android:id="@+id/nameLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="46dp"
                            android:layout_marginTop="8dp"
                            android:singleLine="true"
                            android:text="@string/nike_name"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_11" />

                        <TextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_toRightOf="@+id/nameLabel"
                            android:singleLine="true"
                            android:text="@{user.name}"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_11"
                            tools:text="0" />

                        <TextView
                            android:id="@+id/buildScoreLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="46dp"
                            android:layout_marginTop="26dp"
                            android:text="@string/good_cityer"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_11" />

                        <TextView
                            android:id="@+id/buildScore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="26dp"
                            android:layout_toRightOf="@+id/buildScoreLabel"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_11"
                            tools:text="0" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/layoutNotLogin"
                        style="@style/ClickableStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="52dp"
                        android:layout_below="@+id/notice"
                        android:layout_marginTop="18dp"
                        android:background="@drawable/bg_gray_round_corner2"
                        android:onClick="@{handler.click}"
                        android:paddingLeft="8dp"
                        android:paddingRight="14dp"
                        android:visibility="@{hasLogin?View.GONE:View.VISIBLE}">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/avatar"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_head_default_boy" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="48dp"
                            android:text="@string/enter"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_15" />


                    </RelativeLayout>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/language"
                        style="@style/CardViewClick"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/notice"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="18dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:onClick="@{handler.click}"
                        app:cardBackgroundColor="@color/card_bg_trans"
                        app:cardCornerRadius="4dp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="8dp">


                            <ImageView
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:src="@drawable/ic_language" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="8dp"
                                android:layout_marginRight="8dp"
                                android:text="@{defaultLanguage ? R.string.language_zh_hk: R.string.language_english}"
                                android:textColor="@color/white"
                                android:textSize="@dimen/font_12" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_arrow_down_white" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/layoutLanguage"
                        style="@style/CardViewClick"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/language"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:clickable="false"
                        android:visibility="@{showLanguage ? View.VISIBLE : View.GONE}"
                        app:cardBackgroundColor="#33405E"
                        app:cardCornerRadius="4dp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#33405E"
                            android:gravity="left"
                            android:orientation="vertical"
                            android:paddingLeft="6dp"
                            android:paddingTop="8dp"
                            android:paddingRight="6dp"
                            android:paddingBottom="8dp">

                            <TextView
                                android:id="@+id/languageZhHK"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:clickable="true"
                                android:drawableLeft="@drawable/ic_china"
                                android:drawablePadding="8dp"
                                android:onClick="@{handler.click}"
                                android:paddingLeft="10dp"
                                android:paddingTop="6dp"
                                android:paddingRight="10dp"
                                android:paddingBottom="6dp"
                                android:text="@string/language_zh_hk"
                                android:textColor="@color/white"
                                android:textSize="@dimen/font_12"
                                app:drawableRes="@{defaultLanguage ? R.drawable.bg_language_select : R.drawable.bg_language_unselect}" />

                            <TextView
                                android:id="@+id/languageEnglish"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:clickable="true"
                                android:drawableLeft="@drawable/ic_us"
                                android:drawablePadding="8dp"
                                android:onClick="@{handler.click}"
                                android:paddingLeft="10dp"
                                android:paddingTop="6dp"
                                android:paddingRight="10dp"
                                android:paddingBottom="6dp"
                                android:text="@string/language_english"
                                android:textColor="@color/white"
                                android:textSize="@dimen/font_12"
                                app:drawableRes="@{defaultLanguage ? R.drawable.bg_language_unselect : R.drawable.bg_language_select}" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="16dp"
                        android:layout_below="@+id/layoutUser"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="48dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/bg_gray_round_corner2"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:text="今日活跃度: 0"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_11"
                        android:visibility="gone" />

                    <llc.metaversenetwork.app.view.MarqueeTextView
                        android:id="@+id/notice"
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:layout_marginLeft="32dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginRight="32dp"
                        android:background="@drawable/bg_gray_round_corner"
                        android:drawableLeft="@drawable/ic_notice"
                        android:drawablePadding="10dp"
                        android:ellipsize="marquee"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:gravity="center_vertical"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:onClick="@{handler.click}"
                        android:paddingLeft="12dp"
                        android:paddingRight="32dp"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_12"
                        tools:text="公告：恭喜鲁班同学拿到五杀！" />

                    <ImageView
                        android:id="@+id/noticeList"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="16dp"
                        android:layout_marginRight="38dp"
                        android:onClick="@{handler.click}"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_notice_more" />

                    <RelativeLayout
                        android:id="@+id/layout_fun1"
                        android:layout_width="154dp"
                        android:layout_height="62dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="44dp"
                        android:visibility="gone">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/bg_gray_top_left_round_corner" />


                        <TextView
                            android:id="@+id/btn_notice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="24dp"
                            android:layout_marginBottom="6dp"
                            android:layout_toLeftOf="@+id/discover"
                            android:drawableTop="@drawable/ic_notice"
                            android:drawablePadding="-4dp"
                            android:gravity="center"
                            android:text="公告"
                            android:textColor="@color/white"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/discover"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="6dp"
                            android:layout_toLeftOf="@+id/daily_sign"
                            android:drawableTop="@drawable/ic_discover"
                            android:drawablePadding="-4dp"
                            android:gravity="center"
                            android:text="發現"
                            android:textColor="@color/white"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/daily_sign"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginRight="8dp"
                            android:layout_marginBottom="6dp"
                            android:drawableTop="@drawable/ic_daily_sign"
                            android:drawablePadding="-4dp"
                            android:gravity="center"
                            android:text="每日签到"
                            android:textColor="@color/white"
                            android:textSize="13sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/layout_fun2"
                        android:layout_width="134dp"
                        android:layout_height="62dp"
                        android:layout_below="@id/layout_fun1"
                        android:layout_alignParentRight="true"
                        android:visibility="gone">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/bg_gray_top_left_round_corner" />

                        <TextView
                            android:id="@+id/production_base"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginRight="4dp"
                            android:layout_marginBottom="6dp"
                            android:layout_toLeftOf="@+id/daily_task"
                            android:drawableTop="@drawable/ic_production_base"
                            android:drawablePadding="-4dp"
                            android:gravity="center"
                            android:text="生产基地"
                            android:textColor="@color/white"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/daily_task"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginRight="8dp"
                            android:layout_marginBottom="6dp"
                            android:drawableTop="@drawable/ic_daily_task"
                            android:drawablePadding="-4dp"
                            android:gravity="center"
                            android:text="每日任务"
                            android:textColor="@color/white"
                            android:textSize="13sp" />

                    </RelativeLayout>


                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_alignParentBottom="true"
                    android:background="#55000000">

                    <TextView
                        android:id="@+id/tabProduce"
                        style="@style/HomeBottomModule"
                        android:drawableTop="@drawable/ic_home_produce"
                        android:onClick="@{handler.click}"
                        android:text="@string/farm" />

                    <TextView
                        android:id="@+id/tabTask"
                        style="@style/HomeBottomModule"
                        android:drawableTop="@drawable/ic_home_task"
                        android:onClick="@{handler.click}"
                        android:text="@string/task" />
                    -

                    <TextView
                        android:id="@+id/tabDiscover"
                        style="@style/HomeBottomModule"
                        android:drawableTop="@drawable/ic_home_discovery"

                        android:onClick="@{handler.click}"
                        android:text="@string/discover" />

                    <TextView
                        android:id="@+id/tabMine"
                        style="@style/HomeBottomModule"
                        android:drawableTop="@drawable/ic_home_mine"
                        android:onClick="@{handler.click}"
                        android:text="@string/mine" />

                </LinearLayout>

            </RelativeLayout>

        </FrameLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>