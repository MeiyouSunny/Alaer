<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="takeCoinInfo"
            type="com.alaer.lib.api.bean.TakeCoinInfo" />

        <variable
            name="number"
            type="llc.metaversenetwork.app.util.NumberUtils" />

        <variable
            name="currencyId"
            type="int" />

        <variable
            name="handler"
            type="llc.metaversenetwork.app.base.BindClickListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_wallet"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        tools:context=".ui.user.UserInfoActivity">

        <include layout="@layout/layout_title_bar_white" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="24dp"
                android:paddingTop="20dp"
                android:paddingRight="24dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/amoutAvalible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="@string/currency_select"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_15" />

                    <TextView
                        android:id="@+id/typeUSDT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:background="@drawable/btn_blue"
                        android:clickable="true"
                        android:onClick="@{handler.click}"
                        android:paddingLeft="8dp"
                        android:paddingTop="4dp"
                        android:paddingRight="8dp"
                        android:paddingBottom="4dp"
                        android:text="USDT"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_14" />

                    <TextView
                        android:id="@+id/typeMNC"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/btn_gray_trans"
                        android:clickable="false"
                        android:onClick="@{handler.click}"
                        android:paddingLeft="8dp"
                        android:paddingTop="4dp"
                        android:paddingRight="8dp"
                        android:paddingBottom="4dp"
                        android:text="MNC"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_14" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="26dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="@string/coin_contract_type"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_15" />

                    <LinearLayout
                        android:id="@+id/layoutContract"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" />

                    <!--                    <TextView-->
                    <!--                        android:layout_width="wrap_content"-->
                    <!--                        android:layout_height="wrap_content"-->
                    <!--                        android:layout_marginLeft="12dp"-->
                    <!--                        android:background="@drawable/btn_blue"-->
                    <!--                        android:clickable="true"-->
                    <!--                        android:onClick="@{handler.click}"-->
                    <!--                        android:paddingLeft="8dp"-->
                    <!--                        android:paddingTop="4dp"-->
                    <!--                        android:paddingRight="8dp"-->
                    <!--                        android:paddingBottom="4dp"-->
                    <!--                        android:text="BSC"-->
                    <!--                        android:textColor="@color/white"-->
                    <!--                        android:textSize="@dimen/font_14" />-->

                    <!--                    <TextView-->
                    <!--                        android:layout_width="wrap_content"-->
                    <!--                        android:layout_height="wrap_content"-->
                    <!--                        android:layout_marginLeft="10dp"-->
                    <!--                        android:background="@drawable/btn_gray_trans"-->
                    <!--                        android:clickable="true"-->
                    <!--                        android:onClick="@{handler.click}"-->
                    <!--                        android:paddingLeft="8dp"-->
                    <!--                        android:paddingTop="4dp"-->
                    <!--                        android:paddingRight="8dp"-->
                    <!--                        android:paddingBottom="4dp"-->
                    <!--                        android:text="HEOC"-->
                    <!--                        android:textColor="@color/white"-->
                    <!--                        android:textSize="@dimen/font_14" />-->


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <View
                        android:id="@+id/line"
                        android:layout_width="4dp"
                        android:layout_height="14dp"
                        android:background="@color/blue" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_toRightOf="@+id/line"
                        android:text="@string/withdraw_address"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_15" />

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="4dp"
                    android:layout_toLeftOf="@+id/icon1"
                    app:cardBackgroundColor="@color/card_bg_trans"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp">

                    <EditText
                        android:id="@+id/coinAddress"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:hint="@string/pls_input_withdrawal_address"
                        android:inputType="text"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textColorHint="@color/font_gray"
                        android:textSize="@dimen/font_12" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="26dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="4dp"
                        android:layout_height="14dp"
                        android:background="@color/blue" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_toRightOf="@+id/line"
                        android:text="@string/withdrawal_amount"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_15" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="4dp"
                        android:layout_toLeftOf="@+id/withdrawalAll"
                        app:cardBackgroundColor="@color/card_bg_trans"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="0dp">

                        <EditText
                            android:id="@+id/etAmount"
                            android:layout_width="match_parent"
                            android:layout_height="42dp"
                            android:layout_centerVertical="true"
                            android:background="@null"
                            android:hint="@{@string/amount_low_limit_is(String.valueOf(takeCoinInfo.detail.amountLowLimit))}"
                            android:inputType="numberDecimal"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:singleLine="true"
                            android:textColor="@color/white"
                            android:textColorHint="@color/gray"
                            android:textSize="@dimen/font_14" />

                    </androidx.cardview.widget.CardView>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/withdrawalAll"
                        android:layout_width="106dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="8dp"
                        android:background="@drawable/btn_blue"
                        android:clickable="true"
                        android:gravity="center"
                        android:onClick="@{handler.click}"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:text="@string/withdrawal_all"
                        android:textColor="@color/white" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="4dp"
                        android:layout_toLeftOf="@+id/sendVerifyCode"
                        app:cardBackgroundColor="@color/card_bg_trans"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="0dp">

                        <EditText
                            android:id="@+id/etVerifyCode"
                            android:layout_width="match_parent"
                            android:layout_height="42dp"
                            android:layout_centerVertical="true"
                            android:background="@null"
                            android:hint="@string/sms_code"
                            android:inputType="numberDecimal"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:singleLine="true"
                            android:textColor="@color/white"
                            android:textColorHint="@color/gray"
                            android:textSize="@dimen/font_14" />

                    </androidx.cardview.widget.CardView>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/sendVerifyCode"
                        android:layout_width="106dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="8dp"
                        android:background="@drawable/btn_blue"
                        android:gravity="center"
                        android:onClick="@{handler.click}"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:text="@string/get_sms_code"
                        android:textColor="@color/white" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:singleLine="true"
                        android:text="@{@string/available_alance_is(number.parseNumber(takeCoinInfo.resp.cashAmount))}"
                        android:textColor="@color/gray"
                        android:textColorHint="@color/gray"
                        android:textSize="@dimen/font_14" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="8dp"
                        android:gravity="center"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:text="@{@string/fee_is(takeCoinInfo.resp.fee)}"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/font_14" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/withdrawDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:gravity="left"
                    android:layout_toRightOf="@+id/line"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_13" />

                <TextView
                    android:id="@+id/withdrawDesc_"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:gravity="left"
                    android:layout_toRightOf="@+id/line"
                    android:text="@string/withdraw_desc_"
                    android:textColor="@color/font_red"
                    android:textSize="@dimen/font_13" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/submit"
                    style="@style/BtnGreen"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginBottom="32dp"
                    android:enabled="false"
                    android:onClick="@{handler.click}"
                    android:text="@string/confirm" />


            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</layout>