<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="data"
            type="com.alaer.lib.api.bean.AssetsTotalInfo.Assets" />

        <variable
            name="currencyId"
            type="int" />

        <variable
            name="handler"
            type="llc.metaversenetwork.app.base.BindClickListener" />
    </data>

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_wallet"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        tools:context=".ui.user.UserInfoActivity">

        <include layout="@layout/layout_title_bar_white" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="24dp"
                android:paddingTop="20dp"
                android:paddingRight="24dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/amoutAvalible"
                        android:layout_width="62dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="資產選擇"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_15" />

                    <TextView
                        android:id="@+id/typeUSDT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:background="@drawable/btn_blue"
                        android:clickable="true"
                        android:onClick="@{handler.click}"
                        android:paddingLeft="8dp"
                        android:paddingTop="4dp"
                        android:paddingRight="8dp"
                        android:paddingBottom="4dp"
                        android:text="USDT"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_14" />

                    <TextView
                        android:id="@+id/typeMNC"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/btn_gray_trans"
                        android:clickable="true"
                        android:onClick="@{handler.click}"
                        android:paddingLeft="8dp"
                        android:paddingTop="4dp"
                        android:paddingRight="8dp"
                        android:paddingBottom="4dp"
                        android:text="MNC"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_14" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="26dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="62dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="鏈類型"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_15" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:background="@drawable/btn_blue"
                        android:clickable="true"
                        android:onClick="@{handler.click}"
                        android:paddingLeft="8dp"
                        android:paddingTop="4dp"
                        android:paddingRight="8dp"
                        android:paddingBottom="4dp"
                        android:text="BSC"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_14" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/btn_gray_trans"
                        android:clickable="true"
                        android:onClick="@{handler.click}"
                        android:paddingLeft="8dp"
                        android:paddingTop="4dp"
                        android:paddingRight="8dp"
                        android:paddingBottom="4dp"
                        android:text="HEOC"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_14" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <View
                        android:id="@+id/line"
                        android:layout_width="4dp"
                        android:layout_height="14dp"
                        android:background="@color/blue" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_toRightOf="@+id/line"
                        android:text="充值地址"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_15" />

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="4dp"
                    android:layout_toLeftOf="@+id/icon1"
                    app:cardBackgroundColor="@color/card_bg_trans"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:hint="請輸入提現地址"
                        android:inputType="numberDecimal"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:singleLine="true"
                        android:textColor="@color/font_gray"
                        android:textColorHint="@color/font_gray"
                        android:textSize="@dimen/font_14" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="26dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="4dp"
                        android:layout_height="14dp"
                        android:background="@color/blue" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_toRightOf="@+id/line"
                        android:text="提現金額"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_15" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="4dp"
                        android:layout_toLeftOf="@+id/btn1"
                        app:cardBackgroundColor="@color/card_bg_trans"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="0dp">

                        <EditText
                            android:id="@+id/etAmount"
                            android:layout_width="match_parent"
                            android:layout_height="42dp"
                            android:layout_centerVertical="true"
                            android:background="@null"
                            android:hint="最小提幣數量0.001"
                            android:inputType="numberDecimal"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:singleLine="true"
                            android:textColor="@color/gray"
                            android:textColorHint="@color/gray"
                            android:textSize="@dimen/font_14" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/btn1"
                        android:layout_width="96dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="8dp"
                        android:background="@drawable/btn_blue"
                        android:gravity="center"
                        android:onClick="@{handler.click}"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:text="全部提現"
                        android:textColor="@color/white" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="4dp"
                        android:layout_toLeftOf="@+id/btn2"
                        app:cardBackgroundColor="@color/card_bg_trans"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="0dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="42dp"
                            android:layout_centerVertical="true"
                            android:background="@null"
                            android:gravity="center_vertical"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:singleLine="true"
                            android:text="可用餘額："
                            android:textColor="@color/gray"
                            android:textColorHint="@color/gray"
                            android:textSize="@dimen/font_14" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/btn2"
                        android:layout_width="96dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="8dp"
                        android:gravity="center"
                        android:onClick="@{handler.click}"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:text="手續費 0.007"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/font_12" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="4dp"
                        android:layout_toLeftOf="@+id/btn3"
                        app:cardBackgroundColor="@color/card_bg_trans"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="0dp">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="42dp"
                            android:layout_centerVertical="true"
                            android:background="@null"
                            android:hint="簡訊驗證碼"
                            android:inputType="numberDecimal"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:singleLine="true"
                            android:textColor="@color/gray"
                            android:textColorHint="@color/gray"
                            android:textSize="@dimen/font_14" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/btn3"
                        android:layout_width="96dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="8dp"
                        android:background="@drawable/btn_blue"
                        android:gravity="center"
                        android:onClick="@{handler.click}"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:text="獲取驗證碼"
                        android:textColor="@color/white" />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:layout_marginBottom="24dp"
                    android:layout_toRightOf="@+id/line"
                    android:text="1.USDT最小提幣數量：0.1\n
2.提現操作將扣除一定的手續費\n
3.請務必確認提幣地址及鏈接型正確，若發生錯誤將導致提幣失敗\n
*為確保你難得資金安全，若您的登入密碼/資金密碼發生修改，將需要在24h後才可進行提幣操作。"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_13" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/copyAddress"
                    style="@style/BtnGreen"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginBottom="32dp"
                    android:onClick="@{handler.click}"
                    android:text="@string/confirm" />


            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</layout>