<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="balance"
            type="com.alaer.lib.api.bean.Balance" />

        <variable
            name="number"
            type="llc.metaversenetwork.app.util.NumberUtils" />

        <variable
            name="handler"
            type="llc.metaversenetwork.app.base.BindClickListener" />
    </data>

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_settings"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        tools:context=".ui.user.UserInfoActivity">

        <include layout="@layout/layout_title_bar_white" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="18dp"
                android:paddingTop="28dp"
                android:paddingRight="18dp"
                android:paddingBottom="32dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="86dp">

                    <TextView
                        android:id="@+id/label1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/assets_select"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_15" />

                    <TextView
                        android:id="@+id/balance1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="18dp"
                        android:text="@string/assets_select"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/font_14"
                        tools:text="余额：00" />


                    <androidx.cardview.widget.CardView
                        android:layout_width="194dp"
                        android:layout_height="40dp"
                        android:layout_below="@+id/label1"
                        android:layout_marginTop="16dp"
                        app:cardBackgroundColor="@color/card_bg_trans"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="0dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <EditText
                                android:id="@+id/etAmount"
                                android:layout_width="match_parent"
                                android:layout_height="42dp"
                                android:layout_centerVertical="true"
                                android:layout_toLeftOf="@+id/exchangeAll"
                                android:background="@null"
                                android:hint="@string/input_number"
                                android:inputType="numberDecimal"
                                android:paddingLeft="18dp"
                                android:paddingRight="8dp"
                                android:singleLine="true"
                                android:textColorHint="@color/white"
                                android:textSize="@dimen/font_14" />

                            <TextView
                                android:id="@+id/exchangeAll"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="8dp"
                                android:background="@drawable/btn_blue"
                                android:onClick="@{handler.click}"
                                android:padding="4dp"
                                android:text="@string/exchange_all"
                                android:textColor="@color/white" />

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>


                </RelativeLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="4dp"
                    android:src="@drawable/ic_exchange_arrow" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="86dp">

                    <TextView
                        android:id="@+id/label2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/convert_assets"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_15" />

                    <TextView
                        android:id="@+id/balance2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="18dp"
                        android:text="@string/assets_select"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/font_14"
                        tools:text="余额：00" />


                    <androidx.cardview.widget.CardView
                        android:layout_width="194dp"
                        android:layout_height="40dp"
                        android:layout_below="@+id/label2"
                        android:layout_marginTop="16dp"
                        app:cardBackgroundColor="@color/card_bg_trans"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="0dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/amountGet"
                                android:layout_width="match_parent"
                                android:layout_height="42dp"
                                android:gravity="center_vertical"
                                android:inputType="numberDecimal"
                                android:paddingLeft="42dp"
                                android:paddingRight="8dp"
                                android:singleLine="true"
                                android:textColorHint="@color/white"
                                android:textSize="@dimen/font_14" />

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp">

                    <View
                        android:id="@+id/line"
                        android:layout_width="4dp"
                        android:layout_height="14dp"
                        android:layout_centerVertical="true"
                        android:background="@color/blue" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_toRightOf="@+id/line"
                        android:text="@string/exchange_detail"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_15" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="12dp"
                        android:layout_toLeftOf="@+id/fee"
                        android:textColor="@color/font_orange"
                        android:textSize="@dimen/font_13"
                        tools:text="個人等級：LV2" />

                    <TextView
                        android:id="@+id/fee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="18dp"
                        android:textColor="@color/font_orange"
                        android:textSize="@dimen/font_13"
                        tools:text="手续费：20%" />

                </RelativeLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/label1"
                    android:layout_marginTop="12dp"
                    app:cardBackgroundColor="@color/card_bg_trans"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="18dp"
                        android:paddingTop="16dp"
                        android:paddingRight="18dp"
                        android:paddingBottom="16dp">

                        <TextView
                            android:id="@+id/detailLabel11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/exchange_type"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/detailLabel12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="@string/immediate_receipt"
                            android:textColor="@color/blue" />

                        <TextView
                            android:id="@+id/detailLabel21"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/detailLabel11"
                            android:layout_marginTop="14dp"
                            android:text="@string/exchange_number"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/detailLabel22"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/detailLabel12"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="14dp"
                            android:text="@string/immediate_receipt"
                            android:textColor="@color/blue" />

                        <TextView
                            android:id="@+id/detailLabel31"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/detailLabel21"
                            android:layout_marginTop="14dp"
                            android:text="@string/exchange_fee"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/detailLabel32"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/detailLabel22"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="14dp"
                            android:text="@string/immediate_receipt"
                            android:textColor="@color/blue" />

                        <TextView
                            android:id="@+id/detailLabel41"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/detailLabel31"
                            android:layout_marginTop="14dp"
                            android:text="@string/get_quantity"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/detailLabel42"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/detailLabel32"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="14dp"
                            android:text="@string/immediate_receipt"
                            android:textColor="@color/blue" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/confirm"
                    style="@style/BtnGreen"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="62dp"
                    android:layout_marginRight="10dp"
                    android:enabled="false"
                    android:onClick="@{handler.click}"
                    android:text="@string/sure_to_exchange" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</layout>