<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="handler"
            type="llc.metaversenetwork.app.base.BindClickListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_settings"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        tools:context=".ui.user.UserInfoActivity">

        <include layout="@layout/layout_title_bar_white" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:layout_marginLeft="39dp"
                android:layout_marginTop="28dp"
                android:background="@drawable/ic_avatar_set" />

            <TextView
                android:id="@+id/titleBelow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="28dp"
                android:text="@string/set_avatar"
                android:textColor="@color/white"
                android:textSize="@dimen/font_17" />

            <TextView
                android:id="@+id/profileDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="54dp"
                android:text="@string/set_personalized_avatar"
                android:textColor="@color/white"
                android:textSize="@dimen/font_12" />

            <RelativeLayout
                android:id="@+id/selectPhoto"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_below="@+id/profileDesc"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="32dp"
                android:layout_marginRight="36dp"
                android:background="@drawable/ic_bg_avatar_select"
                android:clickable="true"
                android:onClick="@{handler.click}">

                <ImageView
                    android:id="@+id/addIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_ic_avatar_add" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/addIcon"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:text="@string/click_to_upload_avatar"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_12" />

                <ImageView
                    android:id="@+id/ivAvatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="14dp"
                    android:scaleType="fitXY"
                    android:visibility="gone" />

            </RelativeLayout>


            <TextView
                android:id="@+id/profileConsume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/submit"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="18dp"
                android:text="@string/set_avatar_price"
                android:textColor="@color/font_red" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/submit"
                style="@style/BtnGreen"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="86dp"
                android:enabled="false"
                android:onClick="@{handler.click}"
                android:text="@string/submit" />

        </RelativeLayout>

    </LinearLayout>

</layout>