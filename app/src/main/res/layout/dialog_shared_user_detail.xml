<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="handler"
            type="llc.metaversenetwork.app.base.BindClickListener" />

        <variable
            name="number"
            type="llc.metaversenetwork.app.util.NumberUtils" />

        <variable
            name="data"
            type="com.alaer.lib.api.bean.SharedUserDetail" />

        <import type="llc.metaversenetwork.app.util.StringUtil" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="470dp"
        android:layout_margin="34dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/close"
            android:layout_width="26dp"
            android:layout_height="25dp"
            android:layout_gravity="right"
            android:layout_marginBottom="8dp"
            android:background="@drawable/ic_dialog_close"
            android:clickable="true"
            android:onClick="@{handler.click}" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="437dp"
            android:background="@drawable/bg_white_round_corner">


            <ImageView
                android:id="@+id/imgTop"
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:background="@drawable/img_buy_seed_success_header" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="@string/user_info"
                android:textColor="@color/font_41"
                android:textSize="@dimen/font_18" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="98dp"
                android:layout_toLeftOf="@+id/title"
                android:gravity="right"
                android:text="UID："
                android:textColor="@color/font_7E"
                android:textSize="@dimen/font_16" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="148dp"
                android:layout_marginTop="98dp"
                android:gravity="left"
                android:text="@{String.valueOf(data.uid)}"
                android:textColor="@color/font_41"
                android:textSize="@dimen/font_16"
                tools:text="198382" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="129dp"
                android:layout_toLeftOf="@+id/title"
                android:gravity="right"
                android:text="昵称："
                android:textColor="@color/font_7E"
                android:textSize="@dimen/font_16" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="148dp"
                android:layout_marginTop="129dp"
                android:gravity="left"
                android:text="@{StringUtil.getNullStringDefault(data.uname)}"
                android:textColor="@color/font_41"
                android:textSize="@dimen/font_16"
                tools:text="桃子" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="162dp"
                android:layout_toLeftOf="@+id/title"
                android:gravity="right"
                android:text="手机号："
                android:textColor="@color/font_7E"
                android:textSize="@dimen/font_16" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="148dp"
                android:layout_marginTop="162dp"
                android:gravity="left"
                android:text="@{String.valueOf(data.phone)}"
                android:textColor="@color/font_41"
                android:textSize="@dimen/font_16"
                tools:text="150****3422" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="194dp"
                android:layout_toLeftOf="@+id/title"
                android:gravity="right"
                android:text="微信号："
                android:textColor="@color/font_7E"
                android:textSize="@dimen/font_16" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="148dp"
                android:layout_marginTop="194dp"
                android:gravity="left"
                android:text="@{StringUtil.getNullStringDefault(data.wechat)}"
                android:textColor="@color/font_41"
                android:textSize="@dimen/font_16"
                tools:text="xialxki" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="227dp"
                android:layout_toLeftOf="@+id/title"
                android:gravity="right"
                android:text="用户等级："
                android:textColor="@color/font_7E"
                android:textSize="@dimen/font_16" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="148dp"
                android:layout_marginTop="227dp"
                android:gravity="left"
                android:text="@{String.valueOf(data.levelName)}"
                android:textColor="@color/font_41"
                android:textSize="@dimen/font_16"
                tools:text="二级数字市民" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="260dp"
                android:layout_toLeftOf="@+id/title"
                android:gravity="right"
                android:text="个人活跃度："
                android:textColor="@color/font_7E"
                android:textSize="@dimen/font_16" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="148dp"
                android:layout_marginTop="260dp"
                android:gravity="left"
                android:text="@{number.parseNumber(data.activityness)}"
                android:textColor="@color/font_41"
                android:textSize="@dimen/font_16"
                tools:text="2398" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="293dp"
                android:layout_toLeftOf="@+id/title"
                android:gravity="right"
                android:text="树苗活跃度："
                android:textColor="@color/font_7E"
                android:textSize="@dimen/font_16" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="148dp"
                android:layout_marginTop="293dp"
                android:gravity="left"
                android:text="@{number.parseNumber(data.minerActivityness)}"
                android:textColor="@color/font_41"
                android:textSize="@dimen/font_16"
                tools:text="29790" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="325dp"
                android:layout_toLeftOf="@+id/title"
                android:gravity="right"
                android:text="分享活跃度："
                android:textColor="@color/font_7E"
                android:textSize="@dimen/font_16" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="148dp"
                android:layout_marginTop="325dp"
                android:gravity="left"
                android:text="@{number.parseNumber(data.promotionActivityness)}"
                android:textColor="@color/font_41"
                android:textSize="@dimen/font_16"
                tools:text="2803" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="358dp"
                android:layout_toLeftOf="@+id/title"
                android:gravity="right"
                android:text="树苗总数："
                android:textColor="@color/font_7E"
                android:textSize="@dimen/font_16" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="148dp"
                android:layout_marginTop="358dp"
                android:gravity="left"
                android:text="@{String.valueOf(data.minerNum)}"
                android:textColor="@color/font_41"
                android:textSize="@dimen/font_16"
                tools:text="5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="391dp"
                android:layout_toLeftOf="@+id/title"
                android:gravity="right"
                android:text="账号位置："
                android:textColor="@color/font_7E"
                android:textSize="@dimen/font_16" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="148dp"
                android:layout_marginTop="391dp"
                android:gravity="left"
                android:text="@{StringUtil.getNullStringDefault(data.cityName)}"
                android:textColor="@color/font_41"
                android:textSize="@dimen/font_16"
                tools:text="北京市朝阳区" />

        </RelativeLayout>

    </LinearLayout>

</layout>